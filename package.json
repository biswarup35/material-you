{
  "name": "material-you",
  "version": "0.0.0",
  "description": "Meeu is a component library for React to build UI faster, beautiful, adaptive. Meeu design system built on top of Material You design",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "commit": "cz"
  },
  "devDependencies": {
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "yarn": ">=1.22.17",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}